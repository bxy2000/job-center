<assembly>
    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.parent.basedir}</directory>
            <outputDirectory>\</outputDirectory>
            <includes>
                <include>README*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ${project.parent.basedir}\bin
            </directory>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>
                ${project.parent.basedir}\lib
            </directory>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>
                ${project.parent.basedir}\doc
            </directory>
            <outputDirectory>doc</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>
                ${project.parent.basedir}\job-admin\src\main\resources
            </directory>
            <outputDirectory>bin\job-admin</outputDirectory>
            <includes>
                <include>application.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ${project.parent.basedir}\job-admin\target
            </directory>
            <outputDirectory>bin\job-admin</outputDirectory>
            <includes>
                <include>job-admin.jar</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>
                ${project.parent.basedir}\job-executor\src\main\resources
            </directory>
            <outputDirectory>bin\job-executor</outputDirectory>
            <includes>
                <include>application.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ${project.parent.basedir}\job-executor\target
            </directory>
            <outputDirectory>bin\job-executor</outputDirectory>
            <includes>
                <include>job-executor.jar</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>
                ${project.parent.basedir}\job-executor-kettle\src\main\resources
            </directory>
            <outputDirectory>bin\job-executor-kettle</outputDirectory>
            <includes>
                <include>application.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ${project.parent.basedir}\job-executor-kettle\target
            </directory>
            <outputDirectory>bin\job-executor-kettle</outputDirectory>
            <includes>
                <include>job-executor-kettle.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
